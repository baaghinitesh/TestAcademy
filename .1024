# Next.js Admin Starter Environment Configuration
# This file configures the development environment for the Next.js admin starter application

# Command to install or update dependencies, will execute each time a new thread created to ensure dependencies up-to-date
dependency_command: npm install

# Command to run when "Run" button clicked
run_command: npm run dev

# Linter configuration for code quality checks
linter_config:
  - config_path: '.eslintrc.json'
    type: 'eslint'
    language: 'typescript'
  - config_path: 'tsconfig.json'
    type: 'tsc'
    language: 'typescript'
